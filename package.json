{
  "name": "mdellm",
  "displayName": "MoProCo",
  "description": "MoProCo - To Model, to prompt or to code? The choice is yours!",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:mdellm.processJavaFolder"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "AI Server Settings",
      "properties": {
        "aiServer.type": {
          "type": "string",
          "default": "llama",
          "enum": [
            "llama",
            "ollama"
          ],
          "description": "Choose between Llama.cpp and Ollama"
        },
        "aiServer.llamaEndpoint": {
          "type": "string",
          "default": "http://localhost:8080/completion",
          "description": "The endpoint URL for the Llama.cpp server"
        },
        "aiServer.ollamaEndpoint": {
          "type": "string",
          "default": "http://localhost:11434/api/generate",
          "description": "The endpoint URL for the Ollama server"
        },
        "aiServer.model": {
          "type": "string",
          "default": "qwen2.5-coder:7b",
          "description": "The model to use for completion"
        },
        "aiServer.systemPrompt": {
          "type": "string",
          "default": "You are an experienced Java programmer. I will ask you questions on how to implement the body of certain Java methods. In your answer, only give the statements for the method body. And output the raw data.",
          "description": "System prompt to use for the AI model"
        },
        "aiServer.ollamaApiApproach": {
          "type": "string",
          "default": "generate",
          "enum": [
            "generate",
            "chat"
          ],
          "description": "Choose between generate API and chat API for Ollama"
        }
      }
    },
    "menus": {
      "explorer/context": [
        {
          "command": "mdellm.processJavaFolder",
          "group": "navigation"
        }
      ]
    },
    "commands": [
      {
        "command": "mdellm.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "mdellm.processJavaFolder",
        "title": "Process Java Folder"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.97.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.19.0",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "axios": ">=1.8.2",
    "ollama": "^0.5.0"
  }
}
